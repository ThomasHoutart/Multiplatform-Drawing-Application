<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorText</item>
        <item name="colorError">@color/colorTextError</item>
        <item name="colorOnError">@color/colorTextError</item>

        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textSize_default</item>
        <item name="android:displayOptions">showHome</item>
    </style>

    <!-- Log In Form -->
    <style name="FormEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ActionButton.Login" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textSize_big</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <!-- Chat  -->
    <style name="ChatSendButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_columnWeight">2</item>
        <item name="android:layout_marginEnd">0sp</item>
        <item name="android:background">@drawable/ic_send_24px</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="ChatAppBarTitle">
        <item name="android:textSize">@dimen/textSize_big</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="lobbyTableHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/textSize_bigger</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyThemeOverlayAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Dialog.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

</resources>