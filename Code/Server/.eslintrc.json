{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [
      {
          "files": ["^((?!(.spec|test)).)*.ts"]
      }
  ],
  "rules": {
    "max-lines-per-function": ["error", 25],
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "require-await": 1
  }
}